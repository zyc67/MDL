/* pages/user/user.wxss */

.user-container {
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 120rpx;
}

/* 用户信息头部 */
.user-header {
  background: linear-gradient(135deg, #4A90E2 0%, #5BA3F5 100%);
  padding: 40rpx 30rpx 60rpx;
  color: white;
  position: relative;
  margin-bottom: 20rpx;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.avatar-section {
  position: relative;
  margin-right: 30rpx;
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-edit {
  position: absolute;
  bottom: 0;
  right: 0;
  width: 40rpx;
  height: 40rpx;
  background-color: #4A90E2;
  border-radius: 50%;
  border: 4rpx solid white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.user-details {
  flex: 1;
}

.user-name {
  font-size: 36rpx;
  font-weight: 600;
  margin-bottom: 10rpx;
}

.user-level {
  font-size: 24rpx;
  color: #fff;
  background-color: rgba(255, 255, 255, 0.2);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  display: inline-block;
  margin-bottom: 15rpx;
}

.level-progress {
  margin-top: 20rpx;
}

.progress-text {
  font-size: 24rpx;
  margin-bottom: 8rpx;
  opacity: 0.9;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background-color: rgba(255, 255, 255, 0.3);
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: white;
  border-radius: 4rpx;
  transition: width 0.5s ease;
}

/* 用户统计 */
.user-stats {
  display: flex;
  background-color: white;
  margin: 0 30rpx 20rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.stat-item {
  flex: 1;
  text-align: center;
  padding: 30rpx 20rpx;
  border-right: 1rpx solid #f0f0f0;
}

.stat-item:last-child {
  border-right: none;
}

.stat-number {
  font-size: 36rpx;
  font-weight: 600;
  color: #4A90E2;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 订单状态 */
.order-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.section-header {
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.more-link {
  font-size: 26rpx;
  color: #4A90E2;
  display: flex;
  align-items: center;
}

.order-status {
  display: flex;
  padding: 20rpx 30rpx 30rpx;
}

.status-item {
  flex: 1;
  text-align: center;
  position: relative;
}

.status-icon {
  width: 48rpx;
  height: 48rpx;
  margin: 0 auto 12rpx;
  color: #4A90E2;
}

.status-name {
  font-size: 24rpx;
  color: #666;
}

.status-badge {
  position: absolute;
  top: -8rpx;
  right: 30%;
  background-color: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 2rpx 8rpx;
  border-radius: 12rpx;
  min-width: 24rpx;
  height: 24rpx;
  line-height: 20rpx;
  text-align: center;
}

/* 功能菜单 */
.menu-section {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background-color 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background-color: #f8f9fa;
}

.menu-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 30rpx;
  color: #4A90E2;
}

.menu-content {
  flex: 1;
}

.menu-title {
  font-size: 30rpx;
  color: #333;
  margin-bottom: 6rpx;
}

.menu-desc {
  font-size: 24rpx;
  color: #999;
}

.menu-arrow {
  width: 24rpx;
  height: 24rpx;
  color: #ccc;
}

.menu-badge {
  background-color: #ff4757;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
}

/* 最近活动 */
.recent-activities {
  background-color: white;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 20rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

.activity-item {
  display: flex;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.activity-item:last-child {
  border-bottom: none;
}

.activity-image {
  width: 120rpx;
  height: 80rpx;
  border-radius: 8rpx;
  margin-right: 24rpx;
}

.activity-content {
  flex: 1;
}

.activity-title {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 8rpx;
  font-weight: 500;
}

.activity-meta {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.activity-date {
  margin-right: 20rpx;
}

.activity-status {
  color: #4A90E2;
  background-color: #f0f8ff;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  font-size: 22rpx;
}

/* 登录弹窗 */
.login-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.login-content {
  background-color: white;
  width: 600rpx;
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  text-align: center;
}

.login-header {
  margin-bottom: 40rpx;
}

.login-logo {
  width: 120rpx;
  height: 120rpx;
  margin: 0 auto 20rpx;
}

.login-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 12rpx;
}

.login-desc {
  font-size: 28rpx;
  color: #666;
}

.login-body {
  margin-bottom: 40rpx;
}

.login-wechat-btn {
  width: 100%;
  background: linear-gradient(135deg, #07c160 0%, #38d973 100%);
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 32rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.login-cancel-btn {
  width: 100%;
  background-color: #f8f9fa;
  color: #666;
  border: none;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 30rpx;
}

.login-footer {
  font-size: 24rpx;
  color: #999;
  line-height: 1.6;
}

.agreement-link {
  color: #4A90E2;
  text-decoration: underline;
}

/* 退出登录按钮 */
.logout-section {
  margin: 40rpx 30rpx 20rpx;
}

.logout-btn {
  width: 100%;
  background-color: white;
  color: #ff4757;
  border: 2rpx solid #ff4757;
  border-radius: 50rpx;
  padding: 28rpx;
  font-size: 30rpx;
  font-weight: 600;
} 