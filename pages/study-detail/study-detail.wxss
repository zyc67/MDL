/* pages/study-detail/study-detail.wxss */

/* 页面容器 */
.container {
  padding: 0;
  background: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 头部轮播图 */
.detail-header {
  position: relative;
  height: 500rpx;
}

.detail-swiper {
  width: 100%;
  height: 100%;
}

.detail-image {
  width: 100%;
  height: 100%;
}

.favorite-btn {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 80rpx;
  height: 80rpx;
  background: rgba(0,0,0,0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 10;
  transition: all 0.3s;
}

.favorite-btn.active {
  background: rgba(255,255,255,0.9);
}

/* 基本信息 */
.detail-info {
  background: #fff;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.info-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 20rpx;
}

.detail-title {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  line-height: 1.4;
  margin-right: 20rpx;
}

.detail-price {
  display: flex;
  align-items: baseline;
  color: #FF4757;
}

.price-symbol {
  font-size: 24rpx;
}

.price-amount {
  font-size: 42rpx;
  font-weight: bold;
  margin: 0 4rpx;
}

.price-unit {
  font-size: 24rpx;
}

.info-tags {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  background: #FF4757;
  color: #fff;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.location,
.duration {
  font-size: 24rpx;
  color: #666;
}

.rating-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.rating {
  display: flex;
  align-items: center;
}

.rating-score {
  font-size: 32rpx;
  font-weight: bold;
  color: #FF9500;
  margin-right: 8rpx;
}

.rating-text {
  font-size: 24rpx;
  color: #999;
  margin-right: 10rpx;
}

.stars {
  display: flex;
  margin-right: 10rpx;
}

.rating-count {
  font-size: 24rpx;
  color: #999;
}

.participants {
  font-size: 24rpx;
  color: #999;
}

/* 通用区块样式 */
.section {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.view-all {
  font-size: 24rpx;
  color: #4A90E2;
}

/* 活动亮点 */
.highlights-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.highlight-item {
  display: flex;
  align-items: center;
}

.highlight-text {
  font-size: 28rpx;
  color: #333;
  margin-left: 16rpx;
  line-height: 1.5;
}

/* 详细描述 */
.desc-content {
  line-height: 1.8;
}

.desc-text {
  font-size: 28rpx;
  color: #666;
}

/* 行程安排 */
.schedule-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.schedule-item {
  display: flex;
  align-items: flex-start;
}

.schedule-day {
  width: 120rpx;
  height: 60rpx;
  background: #4A90E2;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  flex-shrink: 0;
}

.day-number {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
}

.schedule-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.schedule-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.schedule-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.schedule-time {
  font-size: 24rpx;
  color: #999;
}

/* 费用说明 */
.pricing-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.pricing-item {
  display: flex;
  flex-direction: column;
}

.pricing-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.pricing-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 注意事项 */
.notice-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.notice-text {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* 用户评价 */
.reviews-list {
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.review-item {
  padding: 30rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reviewer-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.review-rating {
  display: flex;
}

.review-date {
  font-size: 22rpx;
  color: #999;
}

.review-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.review-images {
  display: flex;
  gap: 10rpx;
  flex-wrap: wrap;
}

.review-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
}

/* 相关推荐 */
.recommend-scroll {
  width: 100%;
}

.recommend-list {
  display: flex;
  padding: 0 30rpx;
  gap: 20rpx;
}

.recommend-item {
  width: 250rpx;
  background: #f8f8f8;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.recommend-image {
  width: 100%;
  height: 160rpx;
}

.recommend-info {
  padding: 20rpx;
}

.recommend-title {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.recommend-price {
  display: flex;
  align-items: baseline;
  color: #FF4757;
}

.recommend-price .price-symbol {
  font-size: 20rpx;
}

.recommend-price .price-amount {
  font-size: 26rpx;
  font-weight: bold;
}

/* 底部占位 */
.bottom-placeholder {
  height: 120rpx;
}

/* 底部操作栏 */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.1);
  display: flex;
  align-items: center;
  z-index: 100;
}

.bar-left {
  display: flex;
  margin-right: 20rpx;
}

.contact-btn,
.share-btn {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 0 20rpx;
  font-size: 20rpx;
  color: #666;
}

.contact-btn text,
.share-btn text {
  margin-top: 4rpx;
}

.bar-right {
  flex: 1;
  display: flex;
  gap: 20rpx;
}

.add-cart-btn {
  flex: 1;
  background: #f0f0f0;
  color: #666;
  border: none;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

.buy-now-btn {
  flex: 2;
  border-radius: 50rpx;
  padding: 24rpx;
  font-size: 28rpx;
}

/* 加载遮罩 */
.loading-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255,255,255,0.8);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.loading {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.loading-text {
  margin-top: 20rpx;
  font-size: 26rpx;
  color: #666;
} 